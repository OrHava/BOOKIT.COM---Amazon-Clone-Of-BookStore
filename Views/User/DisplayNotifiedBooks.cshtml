

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
</head>

<style>
    body {
        background-color: rgba(227, 230, 230, 1);
        font-family: Arial, sans-serif;
    }

    .text-right {
        text-align: right;
    }





    .row {
        margin-left: -5px;
        margin-right: -5px;
    }


 

    .modern-card {
        background-color: rgba(255, 255, 255, 2);
        margin-bottom: 20px;
        margin-right: -60px;
        margin-left: -60px;
    }

  


</style>



<div class="modern-card">
    <h2 style="font-size: 18px; margin-bottom: 10px; font-weight: bold;">All Notified Books</h2>
    <div class="container specific-container">
        <div class="row" style="white-space: nowrap;">
            @if (ViewData["AllNotifiedBooks"] is List<BookProduct> allNotifiedBooks && allNotifiedBooks.Any())
            {
                <div class="col-md-12" style="padding-right: 5px; display: inline-block;">
                    @foreach (var book in allNotifiedBooks)
                    {
                        <div class="card" style="width: 150px; display: inline-block; margin-right: 10px;">
                            <a href="@Url.Action("ItemSalePage", "ProductGallery", new { bookId = book.BookId })">
                                <img src="@book.ImageUrl" class="card-img-top img-thumbnail" alt="Book Image" style="max-width: 100%; max-height: 200px;">
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No notified books found.</p>
            }

        </div>
    </div>
</div>

