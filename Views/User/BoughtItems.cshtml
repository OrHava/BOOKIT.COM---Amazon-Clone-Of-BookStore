@model List<BookProduct>

<h2>Bought Items</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Amount</th>
                <th>Price</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.OrderBooks ?? 1)</td>
                    <th>$@(item.Price * (item.OrderBooks ?? 1))</th>

                
            
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bought items available.</p>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
