@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var httpContext = HttpContextAccessor.HttpContext;
    var hideFooter = false;

    // Check if the current page is SignIn, Registration, or ForgotPassword
    var currentPage = httpContext.Request.Path;
    if (currentPage == "/Home/SignIn" || currentPage == "/Home/Registration" || currentPage == "/Home/ForgotPassword")
    {
        hideFooter = true;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirebaseLoginAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirebaseLoginAuth.styles.css" asp-append-version="true" />


</head>

<style>
    /* Footer Styles */
    footer {
        background-color: #2c3e50;
        color: #ffffff;
        position: fixed;
        bottom: 0;
        width: 100%;
        margin-top: 100px;
        position: absolute;
        width: 100%;
    }

    .container-footer {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

     /* Sidebar Styles */
     /* Move the sidebar to the left of the page */
.sidebar {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: white;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

        .sidebar ul {
            list-style-type: none; /* Remove bullets from list items */
            padding: 0; /* Remove default padding */
            margin: 0; /* Remove default margin */
        }

/* Style for the close button */
.closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
}

/* Style for sidebar links */
.sidebar a {
    padding: 10px 15px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

/* Change color of links on hover */
.sidebar a:hover {
    color: #f1f1f1;
}

/* Open the sidebar when the button is clicked */
.openbtn {
    font-size: 20px;
    cursor: pointer;
    border: none;
    background-color: transparent;
}

/* Position the content to the right of the sidebar */
#main {
    transition: margin-left .5s;
    padding: 16px;
    margin-left: 0;
}

/* Add media query for smaller screens */
@@media screen and (max-height: 450px) {
    .sidebar {
        padding-top: 15px;
    }
    .sidebar a {
        font-size: 18px;
    }
}

</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: linear-gradient(to top right, #CCE5FF, #99CCFF, #66B2FF, #3399FF, #0077FF, #0055CC);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookIt.Com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            @{
                                var httpContext = HttpContextAccessor.HttpContext;
                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");


                                    if (!string.IsNullOrEmpty(userToken))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>


                                    }
                                }
                            }
                        </li>
                      

                        <li class="nav-item">
                            @{

                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                                    var userType = httpContext.Session.GetString("_userType");

                                    if (!string.IsNullOrEmpty(userToken) && userType == "Admin")
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Add_Remove_Product_Admin">Add Book Product</a>
                                    }
                                }
                            }
                        </li>
                        <li class="nav-item">
                            @{

                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                                    var userType = httpContext.Session.GetString("_userType");

                                    if (!string.IsNullOrEmpty(userToken) && userType == "Admin")
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="GetBooksProducts">See Book Product</a>
                                    }
                                }
                            }
                        </li>

                        <li class="nav-item">
                            @{
                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                               

                                    if (!string.IsNullOrEmpty(userToken) )
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Logout</a>
                                    }
                                }
                            }
                        </li>

                     

                    
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div class="sidebar" id="mySidebar">
        <!-- Add a close button inside the sidebar -->
        <button class="closebtn" onclick="closeNav()">
            <span style="color: black;">&times;</span>
        </button>

        <!-- Add your sidebar links -->
        <ul style="list-style-type: none; padding: 0; margin: 0;">
            <!-- Apply styles to remove bullets -->
            <li class="nav-item">
                @{
                    <a class="nav-link" style="color: black; font-size: 16px;" asp-area="" asp-controller="Home" asp-action="Registration">Registration<span style="margin-left: 5px;">&gt;</span></a>
                }
            </li>

            <li class="nav-item">
                @{
                    <a class="nav-link" style="color: black; font-size: 16px;" asp-area="" asp-controller="Home" asp-action="SignIn">Sign In<span style="margin-left: 5px;">&gt;</span></a>
                }
            </li>

            <li class="nav-item">
                @{
                    <a class="nav-link" style="color: black; font-size: 16px;" asp-area="" asp-controller="Payment" asp-action="Index">Payment<span style="margin-left: 5px;">&gt;</span></a>
                }
            </li>
        </ul>
    </div>



    <!-- Page Content -->
    <div id="main">
        <button class="openbtn" onclick="openNav()">&#9776; All</button>
        <!-- Your existing content goes here -->
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!hideFooter)
    {
        <footer class="mt-5">
            <div class="container container-footer">
                <div class="text-center">
                    <a href="https://www.amazon.com/gp/help/customer/display.html?nodeId=508088&ref_=footer_cou" style="color: #ffffff; font-size: 12px;">Terms and Conditions</a>
                </div>
                <div class="text-center">
                    <a href="https://www.amazon.com/gp/help/customer/display.html?nodeId=508088&ref_=footer_cou" style="color: #ffffff; font-size: 12px;">Privacy Policy</a>
                </div>
                <div class="text-center">
                    <a href="https://www.amazon.com/gp/help/customer/display.html?nodeId=508088&ref_=footer_cou" style="color: #ffffff; font-size: 12px;">Ad Choices</a>
                </div>
            </div>
        </footer>
    }

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
