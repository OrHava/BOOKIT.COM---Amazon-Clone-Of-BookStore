@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var httpContext = HttpContextAccessor.HttpContext;
    var hideFooter = false;

    // Check if the current page is SignIn, Registration, or ForgotPassword
    var currentPage = httpContext.Request.Path;
    if (currentPage == "/Home/SignIn" || currentPage == "/Home/Registration" || currentPage == "/Home/ForgotPassword")
    {
        hideFooter = true;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirebaseLoginAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirebaseLoginAuth.styles.css" asp-append-version="true" />


</head>

<style>
    /* Footer Styles */
    footer {
        background-color: #2c3e50;
        color: #ffffff;
        position: fixed;
        bottom: 0;
        width: 100%;
        margin-top: 100px;
        position: absolute;
        width: 100%;
    }

    .container-footer {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: linear-gradient(to top right, #CCE5FF, #99CCFF, #66B2FF, #3399FF, #0077FF, #0055CC);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookIt.Com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            @{
                                var httpContext = HttpContextAccessor.HttpContext;
                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");


                                    if (!string.IsNullOrEmpty(userToken))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>


                                    }
                                }
                            }
                        </li>
                      

                        <li class="nav-item">
                            @{

                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                                    var userType = httpContext.Session.GetString("_userType");

                                    if (!string.IsNullOrEmpty(userToken) && userType == "Admin")
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Add_Remove_Product_Admin">Add Book Product</a>
                                    }
                                }
                            }
                        </li>
                        <li class="nav-item">
                            @{

                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                                    var userType = httpContext.Session.GetString("_userType");

                                    if (!string.IsNullOrEmpty(userToken) && userType == "Admin")
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="GetBooksProducts">See Book Product</a>
                                    }
                                }
                            }
                        </li>

                        <li class="nav-item">
                            @{
                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                               

                                    if (!string.IsNullOrEmpty(userToken) )
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Logout</a>
                                    }
                                }
                            }
                        </li>

                        <li class="nav-item">
                            @{

                                <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Index">Payment</a>


                                
                            }
                        </li>

                    
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!hideFooter)
    {
        <footer class="mt-5">
            <div class="container container-footer">
                <div class="text-center">
                    <a href="https://www.amazon.com/gp/help/customer/display.html?nodeId=508088&ref_=footer_cou" style="color: #ffffff; font-size: 12px;">Terms and Conditions</a>
                </div>
                <div class="text-center">
                    <a href="https://www.amazon.com/gp/help/customer/display.html?nodeId=508088&ref_=footer_cou" style="color: #ffffff; font-size: 12px;">Privacy Policy</a>
                </div>
                <div class="text-center">
                    <a href="https://www.amazon.com/gp/help/customer/display.html?nodeId=508088&ref_=footer_cou" style="color: #ffffff; font-size: 12px;">Ad Choices</a>
                </div>
            </div>
        </footer>
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
