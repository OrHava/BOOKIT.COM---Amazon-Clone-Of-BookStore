@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirebaseLoginAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirebaseLoginAuth.styles.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: linear-gradient(to top right, #CCE5FF, #99CCFF, #66B2FF, #3399FF, #0077FF, #0055CC);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookIt.Com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            @{
                                var httpContext = HttpContextAccessor.HttpContext;
                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");


                                    if (!string.IsNullOrEmpty(userToken))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>


                                    }
                                }
                            }
                        </li>
                      
                    


                   


                        <li class="nav-item">
                            @{

                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                                    var userType = httpContext.Session.GetString("_userType");

                                    if (!string.IsNullOrEmpty(userToken) && userType == "Admin")
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Add_Remove_Product_Admin">Add Book Product</a>
                                    }
                                }
                            }
                        </li>
                        <li class="nav-item">
                            @{

                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                                    var userType = httpContext.Session.GetString("_userType");

                                    if (!string.IsNullOrEmpty(userToken) && userType == "Admin")
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="GetBooksProducts">See Book Product</a>
                                    }
                                }
                            }
                        </li>

                        <li class="nav-item">
                            @{
                                if (httpContext != null)
                                {
                                    var userToken = httpContext.Session.GetString("_UserToken");
                               

                                    if (!string.IsNullOrEmpty(userToken) )
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Logout</a>
                                    }
                                }
                            }
                        </li>

                    
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
