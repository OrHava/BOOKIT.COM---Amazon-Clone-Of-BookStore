@model List<FirebaseLoginAuth.Models.BookProduct>

@{
    ViewData["Title"] = "Book Products";
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Book Id</th>
                    <th scope="col">Admin Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Release Date</th>
                    <th scope="col">Availability</th>
                    <th scope="col">Price</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Description</th>
                    <th scope="col">Pages</th>
                    <th scope="col">Language</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Bestseller</th>
                    <th scope="col">Format</th>
                    <th scope="col">Country</th>
                    <th scope="col">Dimensions</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bookProduct in Model)
                {
                    <tr>
                        <td><img src="@bookProduct.ImageUrl" alt="Book Photo" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" /></td>
                        <td>@bookProduct.BookId</td>
                        <td>@bookProduct.AdminId</td>
                        <td>@bookProduct.Name</td>
                        <td>@bookProduct.Author</td>
                        <td>@bookProduct.Publisher</td>
                        <td>@(bookProduct.ReleaseDate?.ToShortDateString() ?? "N/A")</td>
                        <td>@bookProduct.NumberOfAvailability</td>
                        <td>$@bookProduct.Price</td>
                        <td>@bookProduct.ISBN</td>
                        <td>@bookProduct.Description</td>
                        <td>@bookProduct.Pages</td>
                        <td>@bookProduct.Language</td>
                        <td>@bookProduct.Genre</td>
                        <td>@(bookProduct.IsBestseller.HasValue ? (bookProduct.IsBestseller.Value ? "Yes" : "No") : "N/A")</td>
                        <td>@bookProduct.Format</td>
                        <td>@bookProduct.Country</td>
                        <td>@bookProduct.Dimensions</td>
                        <td>@bookProduct.Weight</td>
                        <td>@bookProduct.Edition</td>
                        <td>
                            <a href="@Url.Action("Edit_Book_Product", new { id = bookProduct.BookId })" class="btn btn-primary">Edit</a>
                            <form method="post" action="@Url.Action("Delete_Book_Product", new { id = bookProduct.BookId })" style="display:inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center">No book products found.</p>
}
