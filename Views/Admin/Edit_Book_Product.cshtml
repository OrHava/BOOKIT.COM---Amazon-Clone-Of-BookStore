            transition: 0.3s;
            margin-bottom: 50px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            }

        .card-header {
            background-color: #ffffff; /* White */
            color: #333333; /* Dark Gray */
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            display: flex;
            justify-content: space-around;
            padding: 10px;
        }

        .section-number {
            background-color: #007bff; /* Blue */
            color: white;
            padding: 3px 8px;
            border-radius: 50%; /* Make it round */
            margin-right: 8px; /* Add some space between the number and the title */
        }

        .card-title {
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            font-size: 14px;
            display: flex; /* Make the title and number aligned */
            align-items: center; /* Vertically center the number */
        }

        .active {
            background-color: #0056b3; /* Darker blue for active section */
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
        }

        .custom-btn {
            background-color: #6c757d; /* Gray color for the button */
            color: #fff; /* White text color */
        }

            .custom-btn:hover {
                background-color: #5a6268; /* Darker gray on hover */
            }



        .card-body {
