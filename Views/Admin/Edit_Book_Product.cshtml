    <script>
        $(document).ready(function () {
            $('#isOnSell').change(function () {
                if ($(this).val() === 'true') {
                    $('#oldPriceContainer').show();
                } else {
                    $('#oldPriceContainer').hide();
                }
            });

            // Trigger change event on page load to show/hide old price container
            $('#isOnSell').trigger('change');
        });

        $(document).ready(function () {
            $('#format').change(function () {
                var selectedFormat = $(this).val();
                if (selectedFormat === 'Softcover and Hardback') {
                    $('#secondImageContainer').show();
                } else {
                    $('#secondImageContainer').hide();
                }
            });
            $('#format').trigger('change');
        });


       

        var currentSection = 1;

        // Function to show a section
        function showSection(section) {
            document.getElementById('section' + section).style.display = 'block';
            updateCardTitle(section);
        }

        // Function to hide a section
        function hideSection(section) {
            document.getElementById('section' + section).style.display = 'none';
        }

        // Function to move to the next section
        function nextSection(section) {
            hideSection(section);
            currentSection = section + 1;
            showSection(currentSection);
        }

        // Function to move to the previous section
        function prevSection(section) {
            hideSection(section);
            currentSection = section - 1;
            showSection(currentSection);
        }

        // Function to update the card title based on the current section
        function updateCardTitle(section) {
            var cardTitle = document.getElementsByClassName('card-title');
            for (var i = 0; i < cardTitle.length; i++) {
                if (i + 1 === section) {
                    cardTitle[i].classList.add('active');
                } else {
                    cardTitle[i].classList.remove('active');
                }
            }
        }



        $(document).ready(function () {
            $('#bookForm').submit(function (event) {
                var price = parseFloat(document.getElementById('price').value);
                var oldPrice = parseFloat(document.getElementById('oldPrice').value);

                if ($('#isOnSell').val() === 'true' && oldPrice <= price) {
                    alert('Old price must be higher than the current price.');
                    event.preventDefault(); // Prevent form submission
                } else {
                    var currentForm = document.getElementById('bookForm');
                    if (!currentForm.checkValidity()) {
                        alert('Please fill out all the required fields in the current section.');
                        event.preventDefault(); // Prevent form submission
                    }
                }
            });

            $('#isOnSell').change(function () {
                if ($(this).val() === 'true') {
                    $('#oldPriceContainer').show();
                } else {
                    $('#oldPriceContainer').hide();
                }
            });

            // Trigger change event on page load to show/hide old price container
            $('#isOnSell').trigger('change');
        });


        // Function to determine which section to display
        function whichSection(section) {
            var cardTitle = document.getElementsByClassName('card-title');
            for (var i = 0; i < cardTitle.length; i++) {
                if (i + 1 === section) {
                    showSection(section);
                } else {
                    hideSection(i + 1);
                }
            }
        }

        // Show the first section initially
        showSection(currentSection);
    </script>

</body>
</html>
