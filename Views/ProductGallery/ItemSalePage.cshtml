@model FirebaseLoginAuth.Models.BookProduct
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .product-container {
            max-width: 600px; /* Increased the max-width */
            max-height: 600px;
            margin: 0 auto;
            text-align: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-bottom:50px;
            display: flex;
            flex-direction: row; /* Changed flex direction to row */
        }

        .product-image {
            max-width: 300px; /* Adjusted max-width */
            height: auto;
            border-radius: 8px 0 0 8px; /* Rounded border on the left side */
        }

        .product-details {
            flex-grow: 1; /* Allow the details to grow and fill the remaining space */
            padding: 20px;
        }

        .a-button {
            display: inline-block;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            transition: background-color 0.3s;
            margin-right: 10px;
            margin-top: 10px;
        }

        .add-to-cart {
            background-color: rgba(255, 216, 20, 1);
            color: black;
        }

        .buy-now {
            background-color: rgba(255, 164, 28, 1);
            color: white;
        }

        .a-button:hover {
            opacity: 0.8;
        }

        .author-info {
            margin-top: 10px;
            font-size: 14px;
            color: #555;
        }

        .rating {
            margin-top: 10px;
            font-size: 18px;
            color: #ffac00;
        }
    </style>
</head>
<body>

    <div class="product-container">
        <img class="product-image" src="@Model.ImageUrl alt="Book Image">
        <div class="product-details">
            <h2>@Model.Name</h2>
            <p>@Model.Author</p>
            <div class="author-info">
                <p class="rating">דירוג: ⭐⭐⭐⭐⭐</p>
            </div>
            <p>Description: @Model.Description</p>
            <p>Price: @Model.Price</p>
            <a href="@Url.Action("ViewCart", "User", new { bookId = Model.BookId })">
                <button class="a-button add-to-cart">Add to Cart</button>
            </a>
            <a href="@Url.Action("ViewCart", "User", new { bookId = Model.BookId })">
                <button class="a-button buy-now">Buy Now</button>
            </a>

        </div>
    </div>

</body>
</html>
